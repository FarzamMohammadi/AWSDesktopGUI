@model TheCoolMovieApp.Models.MovieModel
@{ if (UserModel.LoggedIn == true)
    {
        <h2>Add Movie:</h2>

        @using (Html.BeginForm("AddMovie", "Movie", FormMethod.Post))
        {
            @Html.Label("Title:")
            @Html.TextBoxFor(model => model.Title)
            @Html.ValidationMessageFor(model => model.Title)
            @Html.Label("Year:")
            @Html.TextBoxFor(model => model.Year)
            @Html.Label("Country of Origin:")
            @Html.TextBoxFor(model => model.Origin)
            @Html.Label("Length:")
            @Html.TextBoxFor(model => model.Length)
            @Html.Label("File Location:")
            @Html.TextBoxFor(model => model.FilePath, new { type = "file" })
            @Html.ValidationMessageFor(model => model.FilePath)

            <button type="submit">Add Movie</button>
        }
    }
    else
    {
        <h3> Please Sign in to upload a movie.</h3>
    }
}